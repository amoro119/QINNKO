<config>
    <modules>
        <Mage_Compiler>
            <version>0.1.0</version>
        </Mage_Compiler>
    </modules>
    <global>
        <models>
            <compiler>
                <class>Mage_Compiler_Model</class>
                <resourceModel>compiler_mysql4</resourceModel>
            </compiler>
            <compiler_mysql4>
                <class>Mage_Compiler_Model_Mysql4</class>
                <entities>
                    <configuration>
                        <table>compiler_configuration</table>
                    </configuration>
                </entities>
            </compiler_mysql4>
        </models>
        <resources>
            <compiler_setup>
                <setup>
                    <module>Mage_Compiler</module>
                </setup>
            </compiler_setup>
        </resources>
    </global>
    <admin>
        <routers>
            <compiler>
                <use>admin</use>
                <args>
                    <module>Mage_Compiler</module>
                    <frontName>compiler</frontName>
                </args>
            </compiler>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <Mage_Compiler>
                    <files>
                        <default>Mage_Compiler.csv</default>
                    </files>
                </Mage_Compiler>
            </modules>
        </translate>
        <layout>
            <updates>
                <compiler>
                    <file>compiler.xml</file>
                </compiler>
            </updates>
        </layout>
    </adminhtml>
</config>
