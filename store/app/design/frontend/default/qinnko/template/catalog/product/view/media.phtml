/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>
<?php if (count($this->getGalleryImages()) > 0): ?>
<div class="more-views" id="product-images">
	<div id="thumbnails">
                <div id="thumbnails-mask">
                	<?php foreach ($this->getGalleryImages() as $_image): ?>
<a href="#" onclick="popWin('<?php echo $this->getGalleryUrl($_image) ?>', 'gallery', 'width=300,height=300,left=0,top=0,location=no,status=yes,scrollbars=yes,resizable=yes'); return false;" title="<?php echo $this->htmlEscape($_image->getLabel()) ?>"><img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(95); ?>" width="95" height="95" alt="<?php echo $this->htmlEscape($_image->getLabel()) ?>" /></a>
                    <?php endforeach; ?>
            </div>
                </div><!-- thumbnails -->
</div>
<?php endif; ?>
<?php if ($_product->getImage() != 'no_selection' && $_product->getImage()): ?>
	<script type="text/javascript" src="<?php echo $this->getSkinUrl('js/mzp-packed.js') ?>"></script>
	<link rel="stylesheet" href="<?php echo $this->getSkinUrl('css/magiczoomplus.css') ?>" type="text/css" media="screen" charset="utf-8" />
<div class="product-image-wrap">
<div class="product-image-bg">
<p class="product-image product-image-zoom">
    <?php
        $_img = '<a class="MagicZoom" href="'.$this->helper('catalog/image')->init($_product, 'image').'" rel="zoom-position:inner;zoom-fade: true"><img id="image" style="width:290px" src="'.$this->helper('catalog/image')->init($_product, 'thumbnail')->resize(290,382).'" alt="'.$this->htmlEscape($this->getImageLabel()).'" title="'.$this->htmlEscape($this->getImageLabel()).'" /></a>';
        // echo $_helper->productAttribute($_product, $_img, 'image');
		echo $_img;
    ?>
</p>
</div>
</div>
<?php else: ?>
<p class="product-image">
    <?php
        $_img = '<img src="'.$this->helper('catalog/image')->init($_product, 'image')->resize(290).'" alt="'.$this->htmlEscape($this->getImageLabel()).'" title="'.$this->htmlEscape($this->getImageLabel()).'" />';
        echo $_helper->productAttribute($_product, $_img, 'image');
    ?>
</p>
<?php endif; ?>


